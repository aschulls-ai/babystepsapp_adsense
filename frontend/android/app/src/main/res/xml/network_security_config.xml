<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow all HTTPS traffic - more permissive for connectivity -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
    
    <!-- Specifically allow render.com and other production domains -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">baby-steps-demo-api.onrender.com</domain>
        <domain includeSubdomains="true">onrender.com</domain>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </domain-config>
</network-security-config>