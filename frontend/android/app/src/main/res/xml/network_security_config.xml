<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Ultra-permissive configuration for Android 14+ compatibility -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!-- Accept all system certificates -->
            <certificates src="system"/>
            <!-- Accept user-installed certificates -->
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
    
    <!-- Allow all external domains with maximum compatibility -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">onrender.com</domain>
        <domain includeSubdomains="true">baby-steps-demo-api.onrender.com</domain>
        <domain includeSubdomains="true">emergentagent.com</domain>
        <domain includeSubdomains="true">baby-genius.preview.emergentagent.com</domain>
        <domain includeSubdomains="true">vercel.app</domain>
        <domain includeSubdomains="true">herokuapp.com</domain>
        <domain includeSubdomains="true">netlify.app</domain>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </domain-config>
    
    <!-- Development and localhost -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.1.1</domain>
    </domain-config>
</network-security-config>